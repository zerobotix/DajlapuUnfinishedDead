@{
    ViewBag.Title = "Доска объявлений";
}

@section Styles {
    <link href="~/Styles/animal-list.css" rel="stylesheet" />
}

@section Scripts {
    <script type="text/javascript" charset="utf-8" src="https://api-maps.yandex.ru/services/constructor/1.0/js/?sid=Xc91SP-rHaQMdt5vAtjj_5Vq-AeAT7HR&lang=ru_RU&id=search-map"></script>
    <script></script>
}

<div id="filter-form">
    <div class="form-header">Доска объявлений</div>
    <div class="search-type">
        <div class="button active">Найден</div>
        <div class="button">Пропал</div>
    </div>
    <div class="animal-type">
        <i class="dog-icon"></i>
        <i class="cat-icon active"></i>
    </div>
    <div class="sex-type">
        <div class="header">Пол</div>
        <div class="options">
            <i class="male-icon">М</i>
            <i class="female-icon">Ж</i>
            @*<i class="unknown-icon"></i>*@
        </div>
    </div>
    <div class="size-type">
        <div class="header active">Размер</div>
        <div class="options">
            <i class="s-size-icon">S</i>
            <i class="m-size-icon">M</i>
            <i class="l-size-icon">L</i>
        </div>
    </div>
    <div class="color-type">
        <div class="header">Окрас</div>
        <div class="options">
            @foreach (var color in new List<string> { "бе", "чер", "красный", "син" })
            {
            <label class="checkbox">
                <input type="checkbox" />
                <i class="checkbox-icon"></i>
                @(string.Format("{0} {0} {0} {0} {0}", color))
            </label>
            }
        </div>
    </div>
    <div class="breed-type">
        <div class="header">Порода</div>
        <div class="search">
            <input type="text" placeholder="Поиск..." />
            <i class="search-icon">S</i>
        </div>
        <div class="options">
            @{
                foreach (var breed in new List<string> { "порода 1", "порода 2", "порода 3", "порода 4" })
                {
            <label class="checkbox">
                <input type="checkbox" />
                <i class="checkbox-icon"></i>
                @(breed)
            </label>
                }
            }
            <select>
                <option>1</option>
                <option>2</option>
                <option>3</option>
            </select>
        </div>
    </div>
    <div class="found-time">
        <div class="header">Время обнаружения</div>
        <div class="options">
            <input type="date" />
            <input type="date" />
        </div>
    </div>

    <div class="additional-options">
        <label class="checkbox">
            <input type="checkbox" />
            <i class="checkbox-icon"></i>
            RIP
        </label>
        <label class="checkbox">
            <input type="checkbox" />
            <i class="checkbox-icon"></i>
            SOS
        </label>
        <label class="checkbox">
            <input type="checkbox" />
            <i class="checkbox-icon"></i>
            Передержка
        </label>
    </div>

    <div class="result-count">
        Найдено: 245 объявлений
    </div>
</div>

<div class="results-container">
    <div id="animals-list">
        @for (var i = 0; i < 64; i++)
        {
        <div class="animal-preview">
            <a href="#">
                <img src="~/Content/samples/dog-@(i % 24 + 1).png" />
            </a>
        </div>
        }
    </div>

    <div id="search-map">
    </div>
</div>